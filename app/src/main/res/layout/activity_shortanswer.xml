<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEECE8"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <!-- 사진 영역 -->
        <ImageView
            android:id="@+id/problem_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/samil"
            android:contentDescription="문제 이미지"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:background="#D3D3D3" />

        <!-- 문제 텍스트 -->
        <TextView
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대한민국의 광복 날짜는 19??년 8월 15일입니다. ??에 들어갈 숫자를 적어주세요."
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            android:padding="16dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            android:elevation="4dp" />

        <!-- 답변 입력 칸 -->
        <EditText
            android:id="@+id/answer_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="답을 입력하세요"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            android:inputType="number" />

        <!-- 제출 버튼 -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제출"
            android:layout_gravity="center"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메인으로 돌아가기"
            android:layout_gravity="center"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#A1937E" />

    </LinearLayout>
</ScrollView>

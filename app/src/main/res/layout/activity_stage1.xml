<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEECE8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 타이머 텍스트 -->
        <ProgressBar
            android:id="@+id/timeProgressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="0"
            android:max="100"
            android:layout_alignParentTop="true" />

        <!-- 1단계 표시 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1단계 ~!!"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:paddingBottom="8dp" />

        <!-- 카드 배치 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="16dp">

            <!-- 카드 1 -->
            <ImageView
                android:id="@+id/card_1"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:contentDescription="Card 1"
                android:src="@drawable/card_back"
                />

            <!-- 카드 2 -->
            <ImageView
                android:id="@+id/card_2"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:src="@drawable/card_back"
                android:contentDescription="Card 2" />

            <!-- 카드 3 -->
            <ImageView
                android:id="@+id/card_3"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:src="@drawable/card_back"
                android:contentDescription="Card 3" />

            <!-- 카드 4 -->
            <ImageView
                android:id="@+id/card_4"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:src="@drawable/card_back"
                android:contentDescription="Card 4" />

        </GridLayout>

        <!-- 메인 화면으로 가기 버튼 -->
        <Button
            android:id="@+id/main_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="메인 화면으로 가기"
            android:backgroundTint="#A1937E"
            android:padding="12dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>

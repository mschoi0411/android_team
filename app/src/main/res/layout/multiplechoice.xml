<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEECE8"
    android:padding="16dp">

    <!-- 제목 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/titleCard3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#A1937E"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/titleText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="퀴즈 문제"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#FFFFFF" />
    </androidx.cardview.widget.CardView>

    <!-- 문제 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/questionCard3"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/titleCard3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/questionText3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="8dp"
            android:text="발해 문왕 시기에 도입된 정치 체제는 무엇인가요?"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- 보기 버튼: 3성 6부제 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/option1Card3"
        android:layout_width="317dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/questionCard3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#A1937E"
        android:layout_margin="30dp">

        <Button
            android:id="@+id/option1Button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3성 6부제"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent" />
    </androidx.cardview.widget.CardView>

    <!-- 보기 버튼: 5부 8도제 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/option2Card3"
        android:layout_width="317dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#A1937E"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/option1Card3">

        <Button
            android:id="@+id/option2Button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:text="5부 8도제"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- 보기 버튼: 군현제 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/option3Card3"
        android:layout_width="317dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#A1937E"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/option2Card3">

        <Button
            android:id="@+id/option3Button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:text="군현제"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- 보기 버튼: 중앙집권제 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/option4Card3"
        android:layout_width="317dp"
        android:layout_height="62dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#A1937E"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/option3Card3">

        <Button
            android:id="@+id/option4Button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:text="중앙집권제"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:backgroundTint="#A1937E"
        android:padding="12dp"
        android:text="메인으로 돌아가기"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/option4Card3" />

</androidx.constraintlayout.widget.ConstraintLayout>
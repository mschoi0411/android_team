<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEECE8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간을 흘러가게 할게요"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2단계 ~!!"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:paddingBottom="8dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/card_1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:contentDescription="Card 1"
                android:src="@drawable/card_back" />

            <!-- 카드 2 -->
            <ImageView
                android:id="@+id/card_2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:src="@drawable/card_back"
                android:contentDescription="Card 2" />

            <!-- 카드 3 -->
            <ImageView
                android:id="@+id/card_3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:src="@drawable/card_back"
                android:contentDescription="Card 3" />

            <!-- 카드 4 -->
            <ImageView
                android:id="@+id/card_4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:src="@drawable/card_back"
                android:contentDescription="Card 4" />

            <ImageView
                android:id="@+id/card_5"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:contentDescription="Card 5"
                android:src="@drawable/card_back" />

            <!-- 카드 2 -->
            <ImageView
                android:id="@+id/card_6"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:src="@drawable/card_back"
                android:contentDescription="Card 6" />
        </GridLayout>

        <Button
            android:id="@+id/main_button_stage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="메인 화면으로 가기"
            android:backgroundTint="#A1937E"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEECE8"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/appNameCard1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#A1937E"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/appName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OX퀴즈"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#FFFFFF" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/questionCard1"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/appNameCard1"
        android:paddingTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="8dp"
            android:text="고조선은 제사와 정치를 함께 했던 제정일치 사회이다"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonOCard1"
        android:layout_width="150dp"
        android:layout_height="150dp"

        app:layout_constraintTop_toBottomOf="@id/questionCard1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonXCard1"
        app:layout_constraintBottom_toBottomOf="parent"

        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#A1937E"
        android:layout_margin="4dp">

        <Button
            android:id="@+id/buttonO"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="O"
            android:textColor="#000000"
            android:textSize="40dp"
            android:textStyle="bold"
            android:background="@android:color/transparent" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonXCard1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/questionCard1"
        app:layout_constraintStart_toEndOf="@id/buttonOCard1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#A1937E"
        android:layout_margin="4dp">

        <Button
            android:id="@+id/buttonX"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="X"
            android:textColor="#000000"
            android:textSize="40dp"
            android:textStyle="bold"
            android:background="@android:color/transparent" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#A1937E"
        android:text="메인으로 돌아가기"
        android:padding="12dp"
        android:layout_marginTop="30dp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/buttonOCard1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>